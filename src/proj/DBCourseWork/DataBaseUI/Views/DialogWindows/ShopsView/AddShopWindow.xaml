<Window x:Class="DataBaseUI.Views.DialogWindows.AddShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBaseUI.Views.DialogWindows"
        mc:Ignorable="d"
        Title="Добавить новый магазин" Height="125" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <DockPanel>
            <TextBlock Text="Название:" Margin="3"/>
            <TextBox x:Name="ShopName" Margin="3"/>
        </DockPanel>
        <DockPanel>
            <TextBlock Text="Описание:" Margin="3"/>
            <TextBox x:Name="ShopDescr" Margin="3"/>
        </DockPanel>
        <Button Content="Добавить" Margin="50, 5, 50, 5" Click="Button_Click"/>
    </StackPanel>
</Window>
